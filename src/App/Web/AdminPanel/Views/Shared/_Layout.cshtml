<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="pt-BR">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="O App para quem vai de Van.">
    <meta name="author" content="VouDeVan">
    <meta name="msapplication-tap-highlight" content="no">

    <title>@ViewData["Title"] | VouDeVan - Painel Admin</title>

    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
    <link href="~/libs//bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/libs//perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/mvc-grid/mvc-grid.css" />
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/colors/default-dark.css" id="theme" rel="stylesheet">
    
    <link href="~/css/main.css" id="theme" rel="stylesheet">
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body class="fix-header fix-sidebar card-no-border">
    <div class="preloader">
        <div class="loader">
            <div class="loader__figure"></div>
            <p class="loader__label">VouDeVan</p>
        </div>
    </div>
    <div id="main-wrapper">
        @await Component.InvokeAsync("NToastNotify")
        <partial name="Navigation/_TopNavbar" />
        <partial name="Navigation/_LateralMenu" />

        @*TODO: criar partial automatizada de breadcrumb*@

        <div class="page-wrapper">
            @RenderBody()
            <footer class="footer"> &copy; @DateTime.Now.Year - VouDeVan</footer>
        </div>
    </div>

    <script src="~/libs//jquery/jquery.min.js"></script>
    <script src="~/libs//bootstrap/js/popper.min.js"></script>
    <script src="~/libs//bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/js/waves.js"></script>
    <script src="~/js/sidebarmenu.js"></script>
    <script src="~/libs//mvc-grid/mvc-grid.js" type="text/javascript"></script>
    <script src="~/libs//jquery-mask/dist/jquery.mask.min.js"></script>
    <script src="~/js/mask.init.js"></script>
    <script src="~/js/custom.js"></script>

    @RenderSection("Scripts", required: false)

    <partial name="_ValidationScriptsPartial" />

</body>
</html>