@model VouDeVan.App.Web.AdminPainel.Models.TransportationCompanies.TransportationCompanyViewModel

@{
    ViewData["Title"] = $"Editar Empresa de Transporte - {Model.FantasyName}";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Editar</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Companhias de Transporte</a></li>
                <li class="breadcrumb-item active">Editar</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" asp-antiforgery="true" enctype="multipart/form-data">
                        <partial name="Fields" model="@Model" />
                        <div class="form-row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">Editar</button>
                                <a asp-action="Index" class="btn-shadow btn btn-dark">Voltar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        var behavior = function (val) {
            return val.replace(/\D/g, '').length === 11 ? '(00) 00000-0000' : '(00) 0000-00009';
        },
        options = {
            onKeyPress: function (val, e, field, options) {
                field.mask(behavior.apply({}, arguments), options);
            }
        };

        $('#RepresentativePhone').mask(behavior, options);

        $('#CNPJ').mask('00.000.000/0000-00', { reverse: true });

    </script>
}