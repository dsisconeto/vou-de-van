@using Microsoft.AspNetCore.Html
@using VouDeVan.Core.Business.Domains.TransportationCompanies
@using VouDeVan.Core.Business.Support

@model GridResult<TransportationCompany>

@{

    Func<Guid, IHtmlContent> displayActions =
        @<div>

            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item">

                <i class="fas fa-edit"></i>
            </a>

            <form class="btn-form" asp-action="Delete" asp-route-id="@item" asp-antiforgery="true">
                <button type="submit" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash"></i>
                </button>
            </form>
        </div>;
}

@(Html.Grid(Model.Items)
      .Build(columns =>
      {
          columns.Add(transportationCompany => transportationCompany.FantasyName)
              .Titled("Nome Fantasia");

          columns.Add(transportationCompany => transportationCompany.SocialName)
              .Titled("Razão Social");


          columns.Add(transportationCompany => transportationCompany.CNPJ)
              .Titled("CNPJ");


          columns.Add(transportationCompany => transportationCompany.RepresentativeName)
              .Titled("Representante");


          columns.Add(transportationCompany => transportationCompany.RepresentativePhone)
              .Titled("Telefone do Representante");


          columns.Add(transportationCompany => transportationCompany.Id)
              .Titled("Ações")
              .RenderedAs(company => displayActions(company.Id));
      })
      .Empty("Ainda Não existe empresas cadastradas")
      .Pageable(pager =>
      {
          pager.RowsPerPage = Model.RowsRowsPerPage;
          pager.TotalRows = Model.Total;
      })
      .Sortable()
      )