    <StackLayout>
        <custom:PancakeView HorizontalOptions="Fill" VerticalOptions="Start" CornerRadius="0,0,0,40" HeightRequest="150">
            <Grid>
                <Image Source="map.png" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Aspect="AspectFill" Opacity="0.3" />
                <custom:PancakeView HeightRequest="100" CornerRadius="20,0,0,40" HorizontalOptions="FillAndExpand" VerticalOptions="End">
                    <StackLayout Orientation="Horizontal" Spacing="0" Margin="0,0,20,0" HorizontalOptions="FillAndExpand" VerticalOptions="End">
                        <Entry Visual="Custom" Placeholder="Buscar por rota, destino..." Margin="0, 10" WidthRequest="300" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
                            <!--TIP: quando usar entrada com máscara-->
                            <!--<Entry.Behaviors>
                                <fastEntry:XamarinFastEntryBehaviour Mask="####-####-####-####" 
                                                                     MaxLength="19"/>
                            </Entry.Behaviors>-->
                        </Entry>
                    </StackLayout>
                </custom:PancakeView>
            </Grid>
        </custom:PancakeView>
        <StackLayout Orientation="Horizontal">
            <Label HorizontalOptions="Start" VerticalOptions="Center" Text="Últimas Viagens" FontFamily="{StaticResource LatoBold}" FontSize="20" Margin="20,20,20,0" />
            <Label HorizontalOptions="EndAndExpand" VerticalOptions="Center" TextColor="#2687ee" Text="VER MAIS" FontSize="12" FontFamily="{StaticResource LatoBold}" Margin="20,20,20,0" />
        </StackLayout>
